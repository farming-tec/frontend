{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "noResolve": false,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "removeComments": true,
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "baseUrl": "./@types",
      "typeRoots": [
        "./@types"
      ],
      "types" : [
        "react",
        "react-dom",
        "anymatch",
        "events",
        "glob",
        "minimatch",
        "node",
        "prop-types",
        "q",
        "react-test-renderer",
        "source-list-map",
        "tapable",
        "webpack"
      ]
    },
    "include": [
      "./src/**/.*.tsx",
      "./src/**/*"
    ],
    "exclude": [
      "./node_modules/**/*",
      "./@types/**/*",
      "./postcss.config.js",
      "./webpack.*.js",
      "./webpack/*.js",
    ]
}